{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@tests": ["./src/tests"],
      "@tests/*": ["./src/tests/*"],
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ]
}
